{
  "name": "fringe",
  "version": "1.0.0",
  "description": "Edge rendered React and GraphQL",
  "author": "Bishwendu Kundu",
  "license": "MIT",
  "source": "index.ts",
  "main": "dist/fringe.js",
  "exports": "./dist/fringe.js",
  "type": "module",
  "scripts": {
    "preversion": "yarn run lint && yarn run test",
    "prebuild": "rm -rf dist",
    "build": "microbundle --format modern --target node build --compress -o dist/fringe.js",
    "build:watch": "microbundle --watch --format modern --target node build",
    "dev": "concurrently \"yarn build --watch\" \"nodemon --watch dist test/fixtures/index.js\" ",
    "start": "node test/fixtures/index.js",
    "debug": "node --inspect test/fixtures/index.js",
    "format": "prettier --write \"{src,test}/**/*.ts\"",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "test": "jest"
  },
  "dependencies": {
    "@types/node-dir": "^0.0.33",
    "connection-string": "^4.3.2",
    "handy-redis": "^2.2.1",
    "node-dir": "^0.1.17",
    "node-fetch": "^2.6.1",
    "pino": "^6.11.0",
    "regexparam": "^1.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-optional-chaining": "^7.11.0",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@testing-library/react": "^11.1.0",
    "@types/jest": "^26.0.20",
    "babel-jest": "^26.2.2",
    "babel-plugin-graphql-tag": "^3.1.0",
    "babel-plugin-import-graphql": "^2.8.1",
    "concurrently": "^5.3.0",
    "eslint": "^7.14.0",
    "graphql": "^15.4.0",
    "graphql-tag": "^2.11.0",
    "jest": "^26.2.2",
    "microbundle": "^0.13.0",
    "nodemon": "^2.0.7",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  }
}
